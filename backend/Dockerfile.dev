FROM golang:1.24-alpine

WORKDIR /app

# Install Air for live reloading (using version compatible with Go 1.24)
RUN go install github.com/cosmtrek/air@v1.49.0

# Install build dependencies
RUN apk add --no-cache git

# Copy go mod files
COPY go.mod ./
COPY go.sum* ./
RUN go mod download

# Copy Air configuration
COPY .air.toml ./

# Copy source code
COPY . .

# Expose port
EXPOSE 8080

# Run Air for live reloading
CMD ["air", "-c", ".air.toml"]

